<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLong</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="actionOverflowMenuStyle">@style/popupMenuActionBar</item>
        <item name="popupMenuStyle">@style/popupMenu</item>
        <item name="seekBarStyle">@style/Widget.AppCompat.SeekBar.Discrete</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen1</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu</item>
    </style>

    <style name="popupMenuActionBar" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-10.dp</item>
        <item name="android:dropDownHorizontalOffset">5.dp</item>
    </style>

    <style name="popupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
    </style>
    
    <style name="MyColorPicker" parent="AlertDialog.AppCompat.Light">
        <item name="android:alignmentMode">alignBounds</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="test" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:gravity">center</item>
    </style>
</resources>
