<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:id="@+id/row_competition"
    android:weightSum="100">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/positionCompetitionTable"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/normal_text_size"
        android:background="#ffffff"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="8"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/numberCompetitionTable"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/normal_text_size"
        android:background="#ffffff"
        android:layout_weight="8"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/nameCompetitionTable"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/normal_text_size"
        android:background="#ffffff"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="30"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/countFineCompetitionTable"
        android:gravity="center"
        android:textColor="#000000"
        android:text="0-0-0-0-0"
        android:textSize="@dimen/normal_text_size"
        android:background="#ffffff"
        android:layout_weight="14"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/timeCompetitionTable"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/normal_text_size"
        android:background="#ffffff"
        android:layout_weight="20"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/lagCompetitionTable"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/normal_text_size"
        android:background="#ffffff"
        android:layout_weight="20"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"/>

</TableRow>