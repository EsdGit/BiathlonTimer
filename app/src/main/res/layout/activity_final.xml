<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/headFinalTable"
        android:layout_below="@id/headFinalTable"
        android:background="#000000"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:id="@+id/numberParticipantList"
            android:textColor="#000000"
            android:text="Поз."
            android:gravity="center"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:background="#ffffff"
            android:typeface="serif"
            android:layout_weight="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/groupParticipantList"
            android:typeface="serif"
            android:textColor="#000000"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="№"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/title_text_size"
            android:layout_weight="0.4"
            android:background="#ffffff"/>

        <TextView
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/nameParticipantList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:typeface="serif"
            android:text="@string/fio_col_title"
            android:gravity="center"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:layout_weight="2.2"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/countryParticipantList"
            android:typeface="serif"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="#000000"
            android:text="@string/time_column_final_activity"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/title_text_size"
            android:layout_weight="1"
            android:background="#ffffff"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/scrollViewFinalActivity"
        android:scrollbars="vertical"
        android:layout_below="@+id/headFinalTable"
        android:elevation="2dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:id="@+id/tableFinalActivity"
            android:scrollbars="vertical"
            android:elevation="4dp">

        </TableLayout>
    </ScrollView>

</RelativeLayout>