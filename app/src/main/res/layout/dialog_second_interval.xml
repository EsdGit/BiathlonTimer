<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.5"
        android:orientation="horizontal"
        android:id="@+id/set_second_interval">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/dialog_second_interval"
            android:id="@+id/startPositionWithSecondInterval"
            android:inputType="number"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/dialog_minute_second_interval"
            android:layout_weight="0.49" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text=":"
            android:gravity="center"
            android:layout_weight="0.02"/>

        <NumberPicker
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_seconds_second_interval"
            android:layout_weight="0.49"/>

    </LinearLayout>


</LinearLayout>