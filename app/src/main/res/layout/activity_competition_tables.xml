<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/headCompetitionTableActivity"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тут таймер"
            android:textColor="#ffffff"
            android:id="@+id/competitionTimer"
            android:typeface="serif"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/competitionStart"
            android:src="@drawable/ic_start"
            android:tint="#ffffff"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headTablesCompetitions"
        android:orientation="horizontal"
        android:layout_below="@id/headCompetitionTableActivity"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:text="@string/number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#ffffff"
            android:layout_margin="1dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/position"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/time"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lag"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewTableCompetition"
        android:scrollbars="vertical"
        android:layout_below="@+id/headTablesCompetitions"
        android:layout_above="@+id/toolBarTablesCompetition"
        android:elevation="2dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableCompetitionLayout"
            android:scrollbars="vertical"
            android:elevation="4dp">

        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/toolBarTablesCompetition"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tableBack"
                android:src="@drawable/ic_back"
                android:background="@null"
                android:tint="#000000"
                android:layout_weight="0.5"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Текущий круг"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_forward"
                android:id="@+id/tableForward"
                android:layout_weight="0.5"
                android:layout_gravity="left"
                android:tint="#000000"
                android:background="@null"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/returnLastStep"
            android:src="@drawable/ic_return_last_step"
            android:tint="#000000"
            android:background="@null"
            android:layout_weight="0.5"/>


    </LinearLayout>

</RelativeLayout>